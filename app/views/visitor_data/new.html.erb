<h1>Add Reviewt</h1>

<%= form_for @visitor_datum, url: visdata_path do |f| %>
    <% if @visitor_datum.errors.any? %>
        <% @visitor_datum.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger">
                <%= msg %>
            </div>
        <% end %>
    <% end %>
    <p>
        <%= f.label :rating %><br>
        <%= f.number_field :rating %>
    </p>

    <p>
        <%= f.label :review %><br>
        <%= f.text_area :review %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
